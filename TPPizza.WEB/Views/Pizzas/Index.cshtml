@model IEnumerable<PizzaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Context.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pate.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PizzaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pate.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientNames)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
